</div>
<div class="container mt-3">
  <!-- Trigger the modal with a button -->
  <!-- The Modal -->
Hi Kartheek!
<div class="row">

<div class="col-sm-6">

<h4> EMPLOYEES <button type="button" class="btn btn-primary btn-sm" id="myBtn2">
    <span class="spinner-grow spinner-grow-sm"></span>Add Employee</button> </h4>
      <table id="myTable" border="1">
        <thead>
        <tr style="color:grey">
          <th>Name</th>
          <th>Email</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {{ range .Employees }}
        <tr>
          <td><a href="/show?id={{ .Id }}">{{ .Name }}</a></td>
          <td>{{ .Email }}</td>
          <td><a href="/edit?id={{ .Id }}">Edit</a></td>
          <td><a href="/delete?id={{ .Id }}">Delete</a><td>
        </tr>
        {{ end }}
        </tbody>
      </table>
  
  </div>
  <div class="col-sm-6">
  <!-- Trigger the modal with a button -->
  <!-- The Modal -->
  <h4> SKILLS <button type="button" class="btn btn-primary btn-sm" id="myBtn">
