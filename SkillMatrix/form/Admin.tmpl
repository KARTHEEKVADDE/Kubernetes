        <tr style="color:grey">
          <th>Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {{ range .Skills }}
        <tr>
          <td><a href="/show?id={{.Id}}">{{.Name}}</a></td>
          <td><a href="/edit?id={{.Id}}">Edit</a></td>
          <td><a href="/delete?id={{.Id}}">Delete</a><td>
        </tr>
        {{ end }}
        </tbody>
      </table>
    </div>
  </div>
</div>
